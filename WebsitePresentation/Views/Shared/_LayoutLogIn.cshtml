@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["websitetitle"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsitePresentation.styles.css" asp-append-version="true" />
    @if (CultureInfo.CurrentCulture.Name == "ku-Arab" || CultureInfo.CurrentCulture.Name == "fa-IR")
    {
        <link rel="stylesheet" href="~/css/sitelarge.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sitemedium.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sitesmall.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/siteforall.css" asp-append-version="true" />
    }
    @if (CultureInfo.CurrentCulture.Name == "en-US")
    {
        <link rel="stylesheet" href="~/css/sitelargeltr.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sitemediumltr.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sitesmallltr.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/siteforallltr.css" asp-append-version="true" />
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["websitetitle"]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">@Localizer["about"]</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!--overlay navigation -->




    <div class="container">


        <div class="mainheader">
            <div class="partheaderleft">
            </div>
            <div class="partheadercenter">
                @Localizer["websitetitle"]

            </div>
            <div class="partheaderright">
            </div>
        </div>



        <div id="menu">
            <div id="menuleft">
              
            </div>

            <div id="menuright">
            </div>

        </div>

        <div class="marquee">
            <marquee direction="right" onmouseover="this.stop()" onmouseout="this.start()">

            </marquee>
        </div>

        <div id="container">
            <div id="left" style="width:100%">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
        <div id="footer">
            <div>
                Copyright 2023
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
