</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> @Localizer["websitetitle"]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["home"]</a>
                        </li>
                        @if (Model.checkThemDictionary != null)
                        {
                            if (Model.checkThemDictionary["AboutUs"] == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">@Localizer["about"]</a>
                                </li>
                            }
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Administrator"))
                        {
                            if (Model.checkThemDictionary != null)
                            {
                                if (Model.checkThemDictionary["AdminPanel"] == true)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="AdministratorArea" asp-controller="HomeAdmin" asp-action="Index"> @Localizer["adminpanel"]</a>
                                    </li>
                                }
                            }
                            if (Model.checkThemDictionary != null)
                            {
                                if (Model.checkThemDictionary["AdminPanelArmy"] == true)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="ArmyMembersArea" asp-controller="ArmyMembers" asp-action="Index"> @Localizer["adminpanelarmy"]</a>
                                    </li>
                                }
                            }
                        }
                        @if (Model.checkThemDictionary != null)
                        {
                            if (Model.checkThemDictionary["Language"] == true)
                            {

                                <li class="nav-item dropdown">
                                    <i class="nav-link  text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @Localizer["language"]
                                    </i>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @foreach (var item in Model.SectionLanguages!)
                                        {
                                            <li>
                                                @{
                                                    string imgLanguage = @item.Name + ".png";
                                                }
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChangeLanguage" asp-route-Language="@item.Name" title="@item.TagsName">
                                                    @* <img src="~/Images/ImageThem/Icon/@imgLanguage">*@ @item.Title
                                                    @if (CultureInfo.CurrentCulture.Name == item.Name)
                                                    {
                                                        <i class="fa fa-check " aria-hidden="true"></i>
                                                    }
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                @* string imgLanguage = @item.Name + ".png";
                        <li class="nav-item" style="font-family:Bookman Old Style;font-weight:bold;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChangeLanguage" asp-route-Language="@item.Name" title="@item.TagsName"><img src="~/Images/ImageThem/Icon/@imgLanguage"></a>
                        </li>*@

                            }
                        }
                    </ul>
                    @if (Model.checkThemDictionary != null)
                    {
                        if (Model.checkThemDictionary["LogIn"] == true)
                        {
                            <partial name="_LoginPartial" />
                        }
                    }
                </div>
            </div>
        </nav>


    </header>

    <!--overlay navigation -->
    @if (Model.checkThemDictionary != null)
    {
        if (Model.checkThemDictionary["MenuBar"] == true)
        {
            <div id="myNav" class="overlay">

                <!-- Button to close the overlay navigation -->
                <a href="javascript:void(0)" class="fa fa-window-close-o" style="font-size:50px;" onclick="closeNav()">&times;</a>

                <!-- Overlay content -->
                <div class="overlay-content">
                    @{
                        if (Model.checkThemDictionary != null)
                        {
                            if (Model.checkThemDictionary["RightSection"] == true)
                            {
                                if (Model.sectionFirstSteps!.ToList().Count() > 0)
                                {
                                    foreach (var firstStepItem in Model.sectionFirstSteps!)
                                    {
                                        <div class="blockinformationoverly" title="@firstStepItem.TagsName">
                                            <div class="right-balaoverly">@firstStepItem.Name</div>
                                            <div class="right-vasatoverly">
                                                <ul>
                                                    @foreach (var secondStepItem in Model.sectionSecondSteps!)
                                                    {
                                                        if (secondStepItem.Id_SectionFirstStep == firstStepItem.Id)
                                                        {
                                                            <li>
                                                                @Html.ActionLink(secondStepItem.Name, "SectionThirdStepView", new { idSecondStep = secondStepItem.Id,title=@secondStepItem.TagsName })

                                                            </li>
                                                        }
                                                    }
                                                </ul>
                                            </div>
                                            <div class="right-payinoverly">
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        }
                    }
                </div>

            </div>
        }
    }
    <div class="container">

