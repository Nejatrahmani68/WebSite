            <div id="left">
                @if (Model.checkThemDictionary != null)
                {
                    @if (Model.checkThemDictionary["LeftSection"] == true)
                    {
                        <main role="main">
                            @RenderBody()
                        </main>

                    }
                }
            </div>

            @if (Model.checkThemDictionary != null)
            {
                @if (Model.checkThemDictionary["FooterCategories"] == true)
                {
                    <div class="footercategories">
                        <div class="footercategoriessection">
                            @if (Model.checkThemDictionary != null)
                            {
                                @if (Model.checkThemDictionary["SectionVideo"] == true)
                                {
                                    <div class="sectionscontainer">
                                        <div class="containerindex">
                                            <div class="viewcontainerindextitleright">

                                                <div><a asp-action="ViewAllPostOrderByType" asp-controller="Home" asp-route-postType="Video"> @Localizer["newestvideos"]</a>   ▼ </div>
                                            </div>
                                        </div>
                                        <div id="viewlearnhomeright" style="min-height:337px;border:none;">
                                            @foreach (var item in Model.sectionPostTop5VideoSteps!)
                                            {
                                                <div class="viewlearnhomerightiner" style="border:none;" title="@item.TagsName">
                                                    <div class="viewlearn-lefthome">
                                                        <div class="divlinetitle"><i class="fa fa-circle" aria-hidden="true"></i>@Html.ActionLink(@item.ShortDescription, "PostView", new { idPost = item.Id })   </div>
                                                        <div class="divline"><i class="fa fa-clock-o"></i> @item.CreateDate.ToString("HH:mm -MM/dd/yyyy")<i class="fa fa-user"></i> @item.WriterName  </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                }
                            }
                        </div>
                        <div class="footercategoriessection">
                            @if (Model.checkThemDictionary != null)
                            {
                                @if (Model.checkThemDictionary["SectionArticle"] == true)
                                {
                                    <div class="sectionscontainer">
                                        <div class="containerindex">
                                            <div class="viewcontainerindextitleright">

                                                <div> <a asp-action="ViewAllPostOrderByType" asp-controller="Home" asp-route-postType="Article">@Localizer["newestarticles"]</a>    ▼ </div>
                                            </div>
                                        </div>
                                        <div id="viewlearnhomeright" style="min-height:337px;border:none;">
                                            @foreach (var item in Model.sectionPostTop5ArticleSteps!)
                                            {
                                                <div class="viewlearnhomerightiner" style="border:none;" title="@item.TagsName">
                                                    <div class="viewlearn-lefthome">
                                                        <div class="divlinetitle"><i class="fa fa-circle" aria-hidden="true"></i>@Html.ActionLink(@item.ShortDescription, "PostView", new { idPost = item.Id })   </div>
                                                        <div class="divline"><i class="fa fa-clock-o"></i>  @item.CreateDate.ToString("HH:mm -MM/dd/yyyy")<i class="fa fa-user"></i> @item.WriterName  </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <div class="footercategoriessection">
                            @if (Model.checkThemDictionary != null)
                            {
                                @if (Model.checkThemDictionary["SectionFile"] == true)
                                {
                                    <div class="sectionscontainer">
                                        <div class="containerindex">
                                            <div class="viewcontainerindextitleright">
                                                <div> <a asp-action="ViewAllPostOrderByType" asp-controller="Home" asp-route-postType="File">@Localizer["newestfiles"] </a>   ▼ </div>
                                            </div>
                                        </div>
                                        <div id="viewlearnhomeright" style="min-height:337px;border:none;">
                                            @foreach (var item in Model.sectionPostTop5FileSteps!)
                                            {
                                                <div class="viewlearnhomerightiner" style="border:none;" title="@item.TagsName">
                                                    <div class="viewlearn-lefthome">
                                                        <div class="divlinetitle"><i class="fa fa-circle" aria-hidden="true"></i>@Html.ActionLink(@item.ShortDescription, "PostView", new { idPost = item.Id })   </div>
                                                        <div class="divline"><i class="fa fa-clock-o"></i> @item.CreateDate.ToString("HH:mm -MM/dd/yyyy") <i class="fa fa-user"></i> @item.WriterName </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

            }
        </div>

        <div id="footer">
            <hr />
            @if (Model.checkThemDictionary != null)
            {
                @if (Model.checkThemDictionary["Footer"] == true)
                {
                    <div>
                        Copyright 2023
                    </div>
                }
            }
        </div>
    </div>
