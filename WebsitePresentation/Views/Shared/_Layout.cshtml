        @if (Model.checkThemDictionary != null)
        {
            @if (Model.checkThemDictionary["Header"] == true)
            {
                <div class="mainheader">
                    <div class="mainheaderlogo">
                    </div>
                </div>
            }
            @if (Model.checkThemDictionary != null)
            {
                @if (Model.checkThemDictionary["HeaderTitle"] == true)
                {
                    <div class="websitetitle">
                        <div class="websitetitletext">
                            @Localizer["websitetitle"]
                            @foreach (var socialaddress in Model.sectionPostSocialVideos!)
                            {
                                if (socialaddress.Title == "FaceBook")
                                {
                                    <a href="@socialaddress.Address" title="@socialaddress.TagsName"><i class="fa fa-facebook"></i> </a>
                                }
                                if (socialaddress.Title == "Twiter")
                                {
                                    <a href="@socialaddress.Address" title="@socialaddress.TagsName"><i class="fa fa-twitter"></i> </a>
                                }
                                if (socialaddress.Title == "Instagram")
                                {
                                    <a href="@socialaddress.Address" title="@socialaddress.TagsName"><i class="fa fa-instagram"></i> </a>
                                }
                                if (socialaddress.Title == "YouTube")
                                {
                                    <a href="@socialaddress.Address" title="@socialaddress.TagsName"><i class="fa fa-youtube"></i> </a>
                                }
                                if (socialaddress.Title == "Telegram")
                                {
                                    <a href="@socialaddress.Address" title="@socialaddress.TagsName"><i class="fa fa-telegram"></i> </a>
                                }
                            }
                        </div>
                    </div>
                }
            }
        }

        @if (Model.checkThemDictionary != null)
        {
            if (Model.checkThemDictionary["MenuBar"] == true)
            {
                <nav id="categorynav" class="navbar navbar-expand-sm navbar-toggleable-sm sticky-top  bg-white border-bottom box-shadow">
                    <div class="container-fluid">
                        <a class="navbar-brand"> @Localizer["menu"]</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuitems" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation" style="border:solid 1px white;">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div id="menuitems" class="navbar-collapse collapse d-sm-inline-flex justify-content-between menu">
                            <ul class="navbar-nav flex-grow-1">
                                @if (Model.checkThemDictionary != null)
                                {
                                    if (Model.checkThemDictionary["NavBarSticky"] == true)
                                    {
                                        if (Model.sectionFirstSteps!.ToList().Count() >= 1)
                                        {
                                            foreach (var firstStepItem in Model.sectionFirstSteps!)
                                            {
                                                <li class="nav-item dropdown">
                                                    <i class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        @firstStepItem.Name
                                                    </i>
                                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                        @foreach (var secondStepItem in Model.sectionSecondSteps!)
                                                        {

                                                            if (secondStepItem.Id_SectionFirstStep == firstStepItem.Id)
                                                            {
                                                                <li>
                                                                    @Html.ActionLink(secondStepItem.Name, "SectionThirdStepView", new { idSecondStep = secondStepItem.Id,title=@secondStepItem.TagsName })
                                                                </li>
                                                            }
                                                        }

                                                    </ul>
                                                </li>
                                            }
                                        }
                                    }
                                }

                            </ul>
                            @if (Model.checkThemDictionary != null)
                            {
                                @if (Model.checkThemDictionary["Search"] == true)
                                {
                                    using (Html.BeginForm("PostsSearches", "Home"))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div id="menu">
                                            <div id="menuleft">

                                                <input type="submit" value="@Localizer["search"]" class="submitbutton" />
                                                @Html.TextBox("searchtxt")
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </nav>
            }
        }
        @if (Model.checkThemDictionary != null)
        {
            @if (Model.checkThemDictionary["Marquee"] == true)
            {
                @if (CultureInfo.CurrentCulture.Name == "ku-Arab" || CultureInfo.CurrentCulture.Name == "fa-IR")
                {
                    <div class="marquee">
                        <div class="marqueespinner">
                            <div class="spinner-grow text-primary" role="status">
                                <span class="visually-hidden"></span>
                            </div>
                        </div>
                        <div class="marqueenews">

                            <marquee direction="right" onmouseover="this.stop()" onmouseout="this.start()">
                                @foreach (var item in Model.sectionPostTop12Steps!)
                                {
                                    <strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-circle" aria-hidden="true"></i>@Html.ActionLink(@item.Title, "PostView", new { idPost = item.Id , title=@item.TagsName})</strong>
                                }
                            </marquee>
                        </div>
                    </div>
                }
                @if (CultureInfo.CurrentCulture.Name == "en-US")
                {
                    <div class="marquee">
                        <div class="marqueespinner">
                            <div class="spinner-grow text-primary" role="status">
                                <span class="visually-hidden"></span>
                            </div>
                        </div>
                        <div class="marqueenews">

                            <marquee direction="left" onmouseover="this.stop()" onmouseout="this.start()">
                                @foreach (var item in Model.sectionPostTop12Steps!)
                                {
                                    <strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-circle" aria-hidden="true"></i>@Html.ActionLink(@item.Title, "PostView", new { idPost = item.Id, title=@item.TagsName })</strong>
                                }
                            </marquee>
                        </div>
                    </div>
                }

            }

        }
        <div id="container">
            @if (Model.checkThemDictionary != null)
            {
                if (Model.checkThemDictionary["MenuBar"] == true)
                {
                    <div class="downloadbutton-allsubjects" onclick="openNav()">
                        <!-- Use any element to open/show the overlay navigation menu -->
                        <span onclick="openNav()">@Localizer["menubutton"]</span>
                    </div>
                }
            }
