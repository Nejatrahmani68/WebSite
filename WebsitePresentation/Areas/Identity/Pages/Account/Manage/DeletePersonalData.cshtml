@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="row">
    <div class="col-md-12">
        سڕینەوەی زانیاریەکان
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    <p>
                        <strong>بە سڕینەوەی ئەو بەکار‌هێنەرە تەوای زانیاریەکانی بۆ هەمیشە دەسڕینەوە و توانای ڕیکاوری کردنیان نیە. </strong>
                    </p>
                </div>

                <div>
                    <form id="delete-user" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (Model.RequirePassword)
                        {
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="direction:ltr;text-align:left" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        }
                        <button class="w-100 btn btn-lg btn-danger" type="submit">بیسڕەوە و ئەم ئاکانتە دابخە</button>
                    </form>
                </div>

            </div>
        </div>

    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
