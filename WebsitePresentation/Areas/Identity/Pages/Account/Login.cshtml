@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-12">
        چوونە ژوور
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="row">
                    <div class="col-md-12">
                        زانیاریەکان
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="direction:ltr;text-align:left" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="direction:ltr;text-align:left" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" style="direction:ltr;text-align:left" />
                                    @Html.Label("منت لە بیر بیت")
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">چوونە ژوور</button>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">

                        <p>
                            <a class="w-100 btn btn-lg btn-info" id="forgot-password" asp-page="./ForgotPassword">پەسوۆردم لەبیر چۆتەوە؟</a>
                        </p>
                        <p>
                            <a class="w-100 btn btn-lg btn-info" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ناونووسین</a>
                        </p>
                        <p>
                            <a class="w-100 btn btn-lg btn-info" id="resend-confirmation" asp-page="./ResendEmailConfirmation">ناردنی دوبارەی ئیمەیلی پشت ڕاست کردنەوە</a>
                        </p>
                    </div>
                </div>

            </form>
        </section>
    </div>
    <div class="col-md-8 col-md-offset-2">
        <section>
            <div class="row">
                <div class="col-md-12">
                    بەکار هێنانی ئاکاونتی دەرەکی
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    ئیمەیل و پەسوۆردەکەی کە پێشتر ناونووسیت پێکردووە بنوسە
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                    <hr />
                </div>
            </div>

        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
