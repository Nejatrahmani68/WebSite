@model Model.SectionPostCommentStep

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdministratorArea/Views/Shared/_Layout.cshtml";
}


        <h4>زیادکردن-کۆمێنت بۆ پۆست</h4>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Id_SectionPostStep" class="control-label"></label>
                    <select asp-for="Id_SectionPostStep" class="form-control" asp-items="ViewBag.Id_SectionPostStep" disabled></select>
                </div>
            </div>
        </div>
  
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Timable" /> @Html.DisplayNameFor(model => model.Timable)
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="TagsName" class="control-label"></label>
                        <input asp-for="TagsName" class="form-control" />
                        <span asp-validation-for="TagsName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <input asp-for="Comment" class="form-control" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <select asp-for="Id_SectionPostStep" class="form-control" asp-items="ViewBag.Id_SectionPostStep" hidden></select>
            <input type="hidden" id="idTemp" name="idTemp" value="@ViewBag.idTemp" />
            <div class="form-group">
                <input type="submit" value="زیادکردن" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index" asp-controller="SectionPostCommentSteps" asp-route-idTemp="@ViewBag.idTemp">گەڕانەوە بۆ لیست</a>

            </div>
        </form>
    </div>
</div>


