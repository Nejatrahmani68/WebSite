@using DataAccess.ViewModels
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Areas/AdministratorArea/Views/Shared/_Layout.cshtml";
}
<h4>بەرێوبەری ڕۆڵ بۆ بەکارهێنەری @ViewBag.UserName</h4>
<form method="post">
    <div class="card">
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="دانان" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-info">گەڕانەوە بۆ لیست</a>
        </div>
    </div>
</form>