@model Model.ArmyMembersAccount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/ArmyMembersArea/Views/Shared/_Layout.cshtml";
}

<h4>زیادکردن-ئاکاونتی ئەندامان</h4>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Id_ArmyMembers" class="control-label"></label>
            <select asp-for="Id_ArmyMembers" class="form-control" asp-items="ViewBag.Id_ArmyMembers" disabled></select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Timable" /> @Html.DisplayNameFor(model => model.Timable)
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">

     

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="TagsName" class="control-label"></label>
                        <input asp-for="TagsName" class="form-control" />
                        <span asp-validation-for="TagsName" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Id_ArmySocialsName" class="control-label"></label>
                        <select asp-for="Id_ArmySocialsName" class="form-control" asp-items="ViewBag.Id_ArmySocialsName"></select>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="SocialAddress" class="control-label"></label>
                        <input asp-for="SocialAddress" class="form-control" />
                        <span asp-validation-for="SocialAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <select asp-for="Id_ArmyMembers" class="form-control" asp-items="ViewBag.Id_ArmyMembers" hidden></select>

            <div class="form-group">
                <input type="submit" value="زیادکردن" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index" asp-route-idTemp="@ViewBag.idTemp">گەڕانەوە بۆ لیست</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
